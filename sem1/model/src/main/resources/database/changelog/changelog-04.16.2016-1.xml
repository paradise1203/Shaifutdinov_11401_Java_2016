<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd">

    <changeSet id="0" author="paradise1203">
        <createTable tableName="ban">
            <column name="id" type="int8"/>
            <column name="super_user_id" type="int8"/>
            <column name="user_id" type="int8"/>
            <column name="date" type="date"/>
        </createTable>
    </changeSet>

    <changeSet id="1" author="paradise1203">
        <addPrimaryKey tableName="ban" columnNames="id"/>
    </changeSet>

    <changeSet id="2" author="paradise1203">
        <createSequence sequenceName="ban_seq"
                        schemaName="public" incrementBy="1" startValue="1"/>
    </changeSet>

    <changeSet id="3" author="paradise1203">
        <addForeignKeyConstraint baseTableName="ban" baseColumnNames="super_user_id"
                                 constraintName="ban_super_user_fk"
                                 referencedTableName="super_users"
                                 referencedColumnNames="id"/>
    </changeSet>

    <changeSet id="4" author="paradise1203">
        <addForeignKeyConstraint baseTableName="ban" baseColumnNames="user_id"
                                 constraintName="ban_user_fk"
                                 referencedTableName="users"
                                 referencedColumnNames="id"/>
    </changeSet>

</databaseChangeLog>